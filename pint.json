{
  "preset": "laravel",
  "rules": {
    "array_syntax": {
      "syntax": "short"
    },
    "binary_operator_spaces": {
      "operators": {
        "=>": "align_single_space_minimal"
      }
    },
    "linebreak_after_opening_tag": true,
    "no_unused_imports": true,
    "not_operator_with_successor_space": true,
    "ordered_imports": {
      "sort_algorithm": "length"
    },
    "phpdoc_order": true,
    "yoda_style": true
  }
}
